<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2ff"
    android:layoutDirection="rtl"
    tools:context="com.abdulrahman.asus.PerfectHealth.Calories_menu.buttonCaluclate">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="UselessLeaf"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <com.abdulrahman.asus.PerfectHealth.widgets.myTextView
            android:id="@+id/titile"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bordercol"
            android:gravity="center"
            android:padding="10dp"
            android:text="حساب السعرات الحرارية"
            android:textColor="#ffffff"
            android:textSize="50sp"

            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">


            <com.abdulrahman.asus.PerfectHealth.widgets.myTextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="الجنس"
                android:textColor="#353535"
                android:textSize="50sp"
                tools:ignore="HardcodedText,InefficientWeight,RtlHardcoded" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:buttonTint="#333333"
                        android:onClick="radioButton"
                        android:text="ذكر"
                        android:layout_marginTop="15dp"
                        android:textColor="#353535"
                        android:textSize="50sp"
                        tools:ignore="HardcodedText,RtlHardcoded"
                        tools:targetApi="lollipop" />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="#333333"
                        android:onClick="radioButton"
                        android:text="انثى"
                        android:layout_marginTop="15dp"
                        android:textColor="#353535"
                        android:textSize="50sp"
                        android:gravity=""
                        tools:ignore="HardcodedText"
                        tools:targetApi="lollipop" />

                </LinearLayout>
            </RadioGroup>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.abdulrahman.asus.PerfectHealth.widgets.myTextView
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="الطول"
                android:textColor="#353535"
                android:textSize="50sp"
                tools:ignore="HardcodedText,InefficientWeight,RtlHardcoded" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/centmeter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:ems="6"
                android:gravity="center"
                android:hint="سنتميتر"
                android:textSize="30sp"
                android:inputType="number"
                tools:ignore="HardcodedText,LabelFor,RtlHardcoded" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.abdulrahman.asus.PerfectHealth.widgets.myTextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="الوزن"
                android:textColor="#353535"
                android:textSize="50sp"
                tools:ignore="HardcodedText,InefficientWeight,RtlHardcoded" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/kilogram"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:ems="6"
                android:gravity="center"
                android:hint="كيلو جرام"
                android:inputType="number"
                android:textSize="30sp"
                tools:ignore="HardcodedText,LabelFor,RtlHardcoded" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.abdulrahman.asus.PerfectHealth.widgets.myTextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="العمر"
                android:textColor="#353535"
                android:textSize="50sp"
                tools:ignore="HardcodedText,InefficientWeight,RtlHardcoded" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/years"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:ems="6"
                android:gravity="center"
                android:hint="سنة"
                android:inputType="number"
                android:textSize="30sp"
                tools:ignore="HardcodedText,LabelFor,RtlHardcoded" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            tools:ignore="ExtraText">
            >

            <com.abdulrahman.asus.PerfectHealth.widgets.myTextView
                android:id="@+id/activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:paddingLeft="-20dp"
                android:text="مستوى النشاط"
                android:textColor="#353535"
                android:textSize="50sp"
                tools:ignore="HardcodedText,InefficientWeight,RtlHardcoded,RtlSymmetry" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:entries="@array/country_arrays" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <com.abdulrahman.asus.PerfectHealth.widgets.myButton
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttoncalculate2"
            android:onClick="calculate"
            android:text="حساب"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
