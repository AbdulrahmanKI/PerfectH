<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"

    android:background="@drawable/mainbackgroung">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-3834466240178402/1535133400">
    </com.google.android.gms.ads.AdView>
    <LinearLayout
        android:id="@+id/linearG"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/adView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="225dp"
            app:srcCompat="@drawable/logoback"
            tools:ignore="ContentDescription" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#34ca99"
            app:cardCornerRadius="5dp"
            app:cardElevation="7dp">

            <com.abdulrahman.asus.PerfectHealth.widgets.myButton
                android:id="@+id/buatlson4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buttonpress"
                android:onClick="calories"
                android:paddingRight="70dp"
                android:text="@string/سعرات"
                android:textColor="#e4e4e4"
                android:textSize="40sp"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

            <ImageView
                android:id="@+id/jimaageViesw3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_calories"
                tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry,VectorDrawableCompat" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#1aafd0"
            app:cardCornerRadius="5dp"
            app:cardElevation="7dp">

            <ImageView
                android:id="@+id/imaageVijesw3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_vitamin"

                tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry,VectorDrawableCompat" />

            <com.abdulrahman.asus.PerfectHealth.widgets.myButton
                android:id="@+id/dbuatson4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/buttonpress"
                android:onClick="vitamin"
                android:paddingRight="80dp"
                android:text="@string/فيتامين"
                android:textColor="#e4e4e4"
                android:textSize="40sp"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#6a67ce"
            app:cardCornerRadius="5dp"
            app:cardElevation="7dp">

            <com.abdulrahman.asus.PerfectHealth.widgets.myButton
                android:id="@+id/budatson4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/buttonpress"
                android:onClick="sport"
                android:paddingRight="70dp"
                android:text="@string/sport"
                android:textColor="#e4e4e4"
                android:textSize="40sp"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

            <ImageView
                android:id="@+id/idmaageViesw3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_sport"
                tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry,VectorDrawableCompat" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#ffb900"
            app:cardCornerRadius="5dp"
            app:cardElevation="7dp">

            <com.abdulrahman.asus.PerfectHealth.widgets.myButton
                android:id="@+id/buatsond4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/buttonpress"
                android:onClick="BMI"
                android:paddingRight="70dp"
                android:text="@string/BMI"
                android:textColor="#e4e4e4"
                android:textSize="40sp"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

            <ImageView
                android:id="@+id/imaageVieswd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_bmi"
                tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry,VectorDrawableCompat" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#fc636b"
            app:cardCornerRadius="5dp"
            app:cardElevation="7dp">

            <com.abdulrahman.asus.PerfectHealth.widgets.myButton
                android:id="@+id/buatson4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/buttonpress"
                android:onClick="Information"
                android:paddingRight="90dp"
                android:text="@string/معلومات"
                android:textColor="#e4e4e4"
                android:textSize="38sp"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

            <ImageView
                android:id="@+id/imaageViesw3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_info"
                tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry,VectorDrawableCompat" />

        </android.support.v7.widget.CardView>

    </LinearLayout>




</android.support.constraint.ConstraintLayout>